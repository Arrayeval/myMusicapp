//设置背景图片
bg-image($url)
  background-image url($url + "@2x.png")
  //媒体查询
  @media (-weblit-min-device-pixel-ratio:3),(min-device-pixel-ratio: 3)
    background-image:url($url+ "@3x.png")

//字体溢出处理
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

//t拓展小图标点中区域的
extend-click()
  position relative
  &:before
    content:''
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px

